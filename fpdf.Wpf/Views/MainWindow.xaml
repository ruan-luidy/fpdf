<hc:Window
  x:Class="fpdf.Wpf.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:fpdf.Wpf.Views.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:fpdf.Wpf.ViewModels"
  Title="Network PDF Manager"
  Width="1200"
  Height="800"
  MinWidth="800"
  MinHeight="600"
  d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
  Loaded="Window_Loaded"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <hc:Window.InputBindings>
    <KeyBinding
      Key="P"
      Command="{Binding PrintSelectedFilesCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="R"
      Command="{Binding RefreshCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="Comma"
      Command="{Binding OpenSettingsCommand}"
      Modifiers="Ctrl" />
  </hc:Window.InputBindings>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  Menu Bar  -->
    <Border Grid.Row="0" Background="{DynamicResource RegionBrush}">
      <Grid Margin="8,4">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  Logo/Titulo  -->
        <StackPanel Grid.Column="0" Orientation="Horizontal">
          <icon:PackIconPhosphorIcons
            Width="24"
            Height="24"
            Foreground="{DynamicResource PrimaryBrush}"
            Kind="FilePdf" />
          <TextBlock
            Margin="8,0,0,0"
            VerticalAlignment="Center"
            FontSize="16"
            FontWeight="SemiBold"
            Text="Network PDF Manager" />
        </StackPanel>

        <!--  Acoes rapidas  -->
        <StackPanel Grid.Column="2" Orientation="Horizontal">
          <Button
            Command="{Binding RefreshCommand}"
            Style="{StaticResource ButtonIconCustom}"
            ToolTip="Atualizar (Ctrl+R)">
            <icon:PackIconPhosphorIcons Kind="ArrowClockwise" />
          </Button>

          <Button
            Command="{Binding PrintSelectedFilesCommand}"
            Style="{StaticResource ButtonIconCustom}"
            ToolTip="Imprimir (Ctrl+P)">
            <icon:PackIconPhosphorIcons Kind="Printer" />
          </Button>

          <hc:Divider
            MaxHeight="16"
            LineStrokeThickness="2"
            Orientation="Vertical" />

          <Button
            Command="{Binding OpenSettingsCommand}"
            Style="{StaticResource ButtonIconCustom}"
            ToolTip="Configuracoes (Ctrl+,)">
            <icon:PackIconPhosphorIcons Kind="Gear" />
          </Button>
        </StackPanel>
      </Grid>
    </Border>

    <!--  Conteudo Principal  -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition
          Width="{Binding TreeViewWidth, Mode=TwoWay, Converter={StaticResource Double2GridLengthConverter}}"
          MinWidth="150"
          MaxWidth="400" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition
          Width="{Binding FileListWidth, Mode=TwoWay, Converter={StaticResource Double2GridLengthConverter}}"
          MinWidth="200"
          MaxWidth="500" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!--  Painel de Pastas  -->
      <controls:FolderTreeControl Grid.Column="0" DataContext="{Binding FolderTree}" />

      <GridSplitter
        Grid.Column="1"
        Width="4"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch"
        Background="Transparent" />

      <!--  Lista de Arquivos  -->
      <controls:FileListControl Grid.Column="2" DataContext="{Binding FileList}" />

      <GridSplitter
        Grid.Column="3"
        Width="4"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch"
        Background="Transparent" />

      <!--  Visualizador de PDF  -->
      <controls:PdfViewerControl Grid.Column="4" DataContext="{Binding PdfViewer}" />
    </Grid>

    <!--  Painel de Impressao  -->
    <controls:PrintQueueControl
      Grid.Row="2"
      Margin="8"
      DataContext="{Binding PrintQueue}" />

    <!--  Barra de Status  -->
    <Border
      Grid.Row="3"
      Padding="8,4"
      Background="{DynamicResource RegionBrush}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="0,1,0,0">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
          Grid.Column="0"
          VerticalAlignment="Center"
          Text="{Binding StatusMessage}" />

        <StackPanel Grid.Column="1" Orientation="Horizontal">
          <TextBlock
            Margin="0,0,16,0"
            VerticalAlignment="Center"
            Text="{Binding PrintQueue.PendingCount, StringFormat='Fila: {0}'}" />
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</hc:Window>
