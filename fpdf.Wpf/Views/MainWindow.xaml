<hc:Window
  x:Class="fpdf.Wpf.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:fpdf.Wpf.Views.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:fpdf.Wpf.ViewModels"
  Width="1200"
  Height="800"
  MinWidth="800"
  MinHeight="600"
  d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
  Loaded="Window_Loaded"
  Style="{StaticResource WindowWin10}"
  SystemBackdropType="Acrylic"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <hc:Window.NonClientAreaContent>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!--  Logo/Titulo  -->
      <StackPanel Grid.Column="0" Orientation="Horizontal">
        <icon:PackIconPhosphorIcons
          Width="18"
          Height="18"
          VerticalAlignment="Center"
          Foreground="{DynamicResource PrimaryBrush}"
          Kind="FilePdf" />
        <TextBlock
          Margin="8,8,0,0"
          VerticalAlignment="Center"
          FontWeight="SemiBold"
          Style="{StaticResource TextBlockDefaultBold}"
          Text="Fucking Portable Document Files" />
      </StackPanel>

      <!--  Acoes rapidas  -->
      <StackPanel Grid.Column="2" Orientation="Horizontal">
        <Button
          Command="{Binding RefreshCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="Atualizar (Ctrl+R)">
          <icon:PackIconPhosphorIcons Kind="ArrowClockwise" />
        </Button>

        <Button
          Command="{Binding PrintSelectedFilesCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="Imprimir (Ctrl+P)">
          <icon:PackIconPhosphorIcons Kind="Printer" />
        </Button>

        <hc:Divider
          MaxHeight="16"
          Margin="4,0"
          LineStrokeThickness="2"
          Orientation="Vertical" />

        <Button
          Command="{Binding OpenSettingsCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="Configuracoes (Ctrl+,)">
          <icon:PackIconPhosphorIcons Kind="Gear" />
        </Button>
      </StackPanel>
    </Grid>
  </hc:Window.NonClientAreaContent>

  <hc:Window.InputBindings>
    <KeyBinding
      Key="P"
      Command="{Binding PrintSelectedFilesCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="R"
      Command="{Binding RefreshCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="Comma"
      Command="{Binding OpenSettingsCommand}"
      Modifiers="Ctrl" />
  </hc:Window.InputBindings>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  Conteudo Principal  -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition
          Width="{Binding TreeViewWidth, Mode=TwoWay, Converter={StaticResource Double2GridLengthConverter}}"
          MinWidth="150"
          MaxWidth="400" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition
          Width="{Binding FileListWidth, Mode=TwoWay, Converter={StaticResource Double2GridLengthConverter}}"
          MinWidth="200"
          MaxWidth="500" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!--  Painel de Pastas  -->
      <controls:FolderTreeControl Grid.Column="0" DataContext="{Binding FolderTree}" />

      <GridSplitter
        Grid.Column="1"
        Width="6"
        Margin="-10"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch"
        Background="Transparent" />

      <!--  Lista de Arquivos  -->
      <controls:FileListControl Grid.Column="2" DataContext="{Binding FileList}" />

      <GridSplitter
        Grid.Column="3"
        Width="6"
        Margin="-10"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch"
        Background="Transparent" />

      <!--  Visualizador de PDF  -->
      <controls:PdfViewerControl Grid.Column="4" DataContext="{Binding PdfViewer}" />
    </Grid>

    <!--  Barra de Status com Impressao  -->
    <Border
      Grid.Row="1"
      Margin="0,5,0,0"
      Background="{DynamicResource DarkMaskBrush}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="0,1,0,0">
      <controls:PrintQueueControl DataContext="{Binding PrintQueue}" />
    </Border>
  </Grid>
</hc:Window>
