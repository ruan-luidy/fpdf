<hc:Window
x:Class="fpdf.Wpf.Views.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:controls="clr-namespace:fpdf.Wpf.Views.Controls"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:hc="https://handyorg.github.io/handycontrol"
xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
xmlns:behaviors="clr-namespace:fpdf.Wpf.Behaviors"
xmlns:ext="clr-namespace:fpdf.Wpf.Extensions"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="clr-namespace:fpdf.Wpf.ViewModels"
Width="1200"
Height="800"
MinWidth="800"
MinHeight="600"
d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
Loaded="Window_Loaded"
Style="{StaticResource WindowWin10}"
SystemBackdropType="Acrylic"
WindowStartupLocation="CenterScreen"
mc:Ignorable="d">

  <hc:Window.NonClientAreaContent>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!--  Logo/Titulo  -->
      <StackPanel Grid.Column="0" Orientation="Horizontal">
        <icon:PackIconPhosphorIcons
          Width="18"
          Height="18"
          VerticalAlignment="Center"
          Foreground="{DynamicResource PrimaryBrush}"
          Kind="FilePdf" />
        <TextBlock
          Margin="8,8,0,0"
          VerticalAlignment="Center"
          FontWeight="SemiBold"
          Style="{StaticResource TextBlockDefaultBold}"
          Text="{ext:Loc Main_AppTitle}" />
      </StackPanel>

      <!--  Acoes rapidas  -->
      <StackPanel Grid.Column="2" Orientation="Horizontal">
        <Button
          Command="{Binding ToggleTreeViewCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="{ext:Loc Main_ToggleTreeTooltip}">
          <icon:PackIconPhosphorIcons>
            <icon:PackIconPhosphorIcons.Style>
              <Style TargetType="icon:PackIconPhosphorIcons">
                <Setter Property="Kind" Value="SidebarSimple" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding IsTreeViewVisible}" Value="False">
                    <Setter Property="Kind" Value="Sidebar" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </icon:PackIconPhosphorIcons.Style>
          </icon:PackIconPhosphorIcons>
        </Button>

        <Button
          Command="{Binding RefreshCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="{ext:Loc Main_RefreshTooltip}">
          <icon:PackIconPhosphorIcons Kind="ArrowClockwise" />
        </Button>

        <Button
          Command="{Binding PrintSelectedFilesCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="{ext:Loc Main_PrintTooltip}">
          <icon:PackIconPhosphorIcons Kind="Printer" />
        </Button>

        <Button
          Command="{Binding OpenPrintHistoryCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="{ext:Loc PrintHistory_Tooltip}">
          <icon:PackIconPhosphorIcons Kind="ClockCounterClockwise" />
        </Button>

        <hc:Divider
          MaxHeight="16"
          Margin="4,0"
          LineStrokeThickness="2"
          Orientation="Vertical" />

        <Button
          Command="{Binding OpenSettingsCommand}"
          Style="{StaticResource ButtonIconCustom}"
          ToolTip="{ext:Loc Main_SettingsTooltip}">
          <icon:PackIconPhosphorIcons Kind="Gear" />
        </Button>
      </StackPanel>
    </Grid>
  </hc:Window.NonClientAreaContent>

  <hc:Window.InputBindings>
    <KeyBinding
      Key="P"
      Command="{Binding PrintSelectedFilesCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="R"
      Command="{Binding RefreshCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="B"
      Command="{Binding ToggleTreeViewCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="Comma"
      Command="{Binding OpenSettingsCommand}"
      Modifiers="Ctrl" />
    <KeyBinding
      Key="H"
      Command="{Binding OpenPrintHistoryCommand}"
      Modifiers="Ctrl" />
  </hc:Window.InputBindings>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!--  Conteudo Principal  -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition
          x:Name="TreeViewColumn"
          Width="{Binding TreeViewWidth, Mode=TwoWay, Converter={StaticResource Double2GridLengthConverter}}"
          MinWidth="0"
          MaxWidth="500" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition
          Width="{Binding FileListWidth, Mode=TwoWay, Converter={StaticResource Double2GridLengthConverter}}"
          MinWidth="200"
          MaxWidth="500" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!--  Painel de Pastas com animacao  -->
      <Border Grid.Column="0" ClipToBounds="True">
        <Border.Style>
          <Style TargetType="Border">
            <Setter Property="Opacity" Value="1" />
            <Style.Triggers>
              <DataTrigger Binding="{Binding IsTreeViewVisible}" Value="False">
                <DataTrigger.EnterActions>
                  <BeginStoryboard>
                    <Storyboard>
                      <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2" />
                    </Storyboard>
                  </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                  <BeginStoryboard>
                    <Storyboard>
                      <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.2" />
                    </Storyboard>
                  </BeginStoryboard>
                </DataTrigger.ExitActions>
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </Border.Style>
        <controls:FolderTreeControl DataContext="{Binding FolderTree}" />
      </Border>

      <!--  GridSplitter com animacao  -->
      <GridSplitter Grid.Column="1">
        <GridSplitter.Style>
          <Style TargetType="GridSplitter">
            <Setter Property="Width" Value="6" />
            <Setter Property="Margin" Value="-10,0,-10,0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="IsEnabled" Value="{Binding IsTreeViewVisible}" />
            <Setter Property="Opacity" Value="1" />
            <Style.Triggers>
              <DataTrigger Binding="{Binding IsTreeViewVisible}" Value="False">
                <DataTrigger.EnterActions>
                  <BeginStoryboard>
                    <Storyboard>
                      <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2" />
                    </Storyboard>
                  </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                  <BeginStoryboard>
                    <Storyboard>
                      <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.2" />
                    </Storyboard>
                  </BeginStoryboard>
                </DataTrigger.ExitActions>
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </GridSplitter.Style>
      </GridSplitter>

      <!--  Lista de Arquivos  -->
      <controls:FileListControl Grid.Column="2" DataContext="{Binding FileList}" />

      <GridSplitter
        Grid.Column="3"
        Width="6"
        Margin="-10"
        HorizontalAlignment="Center"
        VerticalAlignment="Stretch"
        Background="Transparent" />

      <!--  Visualizador de PDF  -->
      <controls:PdfViewerControl Grid.Column="4" DataContext="{Binding PdfViewer}" />
    </Grid>

    <!--  Barra de Status com Impressao  -->
    <Border
      Grid.Row="1"
      Margin="0,5,0,0"
      Background="{DynamicResource DarkMaskBrush}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="0,1,0,0">
      <controls:PrintQueueControl DataContext="{Binding PrintQueue}" />
    </Border>
  </Grid>
</hc:Window>
