<UserControl
  x:Class="fpdf.Wpf.Views.Controls.SettingsSection"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <StackPanel>
    <!--  Section Title  -->
    <TextBlock
      x:Name="SectionTitle"
      Margin="8,8,0,8"
      HorizontalAlignment="Left"
      Style="{StaticResource TextBlockSubTitleBold}"
      Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" />

    <!--  Section Content  -->
    <Border
      Margin="0,0,0,12"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="4">
      <Border.Background>
        <SolidColorBrush Opacity="0.5" Color="#40000000" />
      </Border.Background>
      <ContentPresenter Content="{Binding SectionContent, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
  </StackPanel>
</UserControl>